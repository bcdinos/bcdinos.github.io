  <script>
    const modpackInput = document.getElementById('modpackInput');
    const downloadArea = document.getElementById('downloadArea');

    modpackInput.addEventListener('change', () => {
      const file = modpackInput.files[0];
      if (file) {
        // Create a downloadable link from the uploaded file blob
        const url = URL.createObjectURL(file);
        downloadArea.innerHTML = `
          <a href="${url}" download="${file.name}" class="download-link">
            Download ${file.name}
          </a>
        `;
      } else {
        downloadArea.innerHTML = '';
      }
    });
  </script>
